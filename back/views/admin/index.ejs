  //       window.location.href='/admin/login';
  //     })
  //     return false;
  //   }
    /*------------修改密码-------------*/
    let seven=document.getElementById('seven');
    let sevenForm=seven.querySelector('form');
    let sevenPwd=sevenForm.querySelectorAll('.newpwd');
    sevenForm.onsubmit=function (e) {
      e=e||event;
