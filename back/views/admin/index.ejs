<script>
  /* ------数据新闻--------*/
  let one = document.getElementById('one');
  let oneForm = one.querySelector('form');
  let oneTbody = one.querySelector('tbody');
  oneForm.onsubmit = function (e) {
    e = e || event;
    e.preventDefault();
    let data = new FormData(this);      //FormData可收集表单数据打成包
    $.ajax({
      url: '/admin/addData',
      type: 'post',
      data,
      dataType: 'json',     //发回数据格式
      cache: false,
      contentType: false,
      processData: false,
      success: function (rs) {
          let tr = document.createElement('tr');
          let td = document.createElement('td');
          td.innerText = rs.title;
          tr.appendChild(td);
          oneTbody.appendChild(tr);
      },
      error: function () {
        alert('操作失败');
      }
    });   //ajax方法
    return false; //阻止默认行为
  };
  /*---------------添加通知------------*/
  let two = document.getElementById('two');
  let twoForm = two.querySelector('form');
  let twoTbody = two.querySelector('tbody');
  twoForm.onsubmit = function () {
    $.post('/admin/addNotice', $(this).serialize(), function (rs) {
      let tr = document.createElement('tr');
      let td = document.createElement('td');
      td.innerText = rs.title;
      tr.appendChild(td);
      td = document.createElement('td');
      td.innerText = new Date(rs.updatedAt);
      tr.appendChild(td);
      twoTbody.appendChild(tr);
    }, 'json');
    return false; //阻止默认行为
  };
  /*---------------添加轮播图------------*/
  let three = document.getElementById('three');
  let threeForm = three.querySelector('form');
  let threeTbody = three.querySelector('tbody');
  threeForm.onsubmit = function (e) {
    let data = new FormData(this);
