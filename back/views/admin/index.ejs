      dataType: 'json',
      cache: false,
      contentType: false,
      processData: false,
      success: function (rs) {
        console.log(rs);
      },
      error: function () {
        alert('操作失败');
      }
    });   //ajax方法
    return false; //阻止默认行为
  };
  /* ------多图片新闻--------*/
  let four = document.getElementById('four');
  let fourForm1 = four.querySelector('.form1');
  let fourForm2 = four.querySelector('.form2');
  let fourTextarea = four.querySelector('textarea');
  let fourOl = four.querySelector('ol');
  fourForm1.onsubmit = function (e) {   //提交图片
    let data = new FormData(this);      //FormData可收集表单数据打成包
    $.ajax({
      url: '/admin/newImg',
      type: 'post',
      data,
      dataType: 'json',     //发回数据格式
      cache: false,
      contentType: false,
      processData: false,
      success: function (rs) {  //rs文件名
        if (rs) //文件不空
        {
          fourTextarea.value += `<img src="imgUrl/upload/${rs}"/>`;
        } else {
          alert('你忘了选择图片！');
        }
        console.log(rs);
      },
      error: function () {
        alert('操作失败');
      }
    });   //ajax方法
    return false; //阻止默认行为
  };
  fourForm2.onsubmit = function () {
    let data = new FormData(this);      //FormData可收集表单数据打成包
    $.ajax({
          url: '/admin/addArticle',
          type: 'post',
          data,
          dataType: 'json',     //发回数据格式
          cache: false,
          contentType: false,
          processData: false,
          success: function (rs) {  //rs文件名
              if (rs) //文件不空
              {
                  fourOl.innerHTML+=`<li>${rs.title}</li>`
              } else {
                  alert('你忘了选择图片！');
              }
              console.log(rs);
          },
          error: function () {
              alert('操作失败');
          }
      });   //ajax方法
      return false; //阻止默认行为
  };
  /* ------删除Audio记录--------*/
  let five = document.getElementById('five');
  let fiveTbody = document.getElementById('fiveTbody');
  let fivePage = document.getElementById('fivePage');
  let fiveSelect=document.getElementById('fiveSelect');
  let fiveNum = 0;  //当前页
  let fivePages = 0;//总页数
  let dataType='';  //数据源分类
  fiveSelect.onchange=function () {
      dataType=this.value;
      showRecord();
  }
  function showRecord() {
      const json={pageNum:fiveNum,dataType}
    $.getJSON('/admin/audioList', json, function (obj) {
      let str = '';
      obj.arr.forEach(el => {
        str += `<tr>
               <td>${el.title}</td>
               <td><img width="80" src="/${el.smallSrc}"></td>
               <td>
                   <button data-id="${el.id}">删除</button>
               </td>
             </tr>`;
      });
      fiveTbody.innerHTML = str;
      fivePages = Math.ceil(obj.num / 5);
      pagination1();
    });
  }

  function pagination1() {//分页
    let str = `<ul class="pagination pull-right">`;
    for (let i = 0; i < fivePages; i++) {
      str += `<li class="${i === fiveNum ? 'active' : ''}" data-index=${i}><a href="##">${i + 1}</a></li>`;
    }
    fivePage.innerHTML = str + '</ul>';
  }

  ev.agent1('fivePage', 'click', 'li', function () {
    fiveNum = this.getAttribute('data-index') - 0;
    showRecord();
  });
  ev.agent1('fiveTbody', 'click', 'button', function () {
    let id = this.getAttribute('data-id');
    if (confirm('你确定要删除吗？')) {
      $.getJSON('/admin/delAudio?id=' + id, function (records) {  //records记录数
        if (records) {
          alert('删除成功！');
          if (records === (fivePages - 1) * 5 && fiveNum === fivePages - 1) {//当前页在最后一页时
            fiveNum = fiveNum > 0 ? (fiveNum - 1) : 0;//判断页数不为负
          }
          showRecord();
        } else {
          alert('删除失败！');
        }
      });
    }
  });

  /*---------------修改Article记录-------------------*/
  let six = document.getElementById('six');
